@model IEnumerable<CarRentingSystem2025.Models.Rental>
@{
    ViewData["Title"] = "Rentals";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-3">
                <i class="fas fa-key text-primary"></i> All Rentals
            </h2>
            <p class="text-center text-muted">Manage and track all rental transactions</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Rental
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Car</th>
                        <th>Customer</th>
                        <th>Pickup Date</th>
                        <th>Dropoff Date</th>
                        <th>Status</th>
                        <th>Total Amount</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rental in Model)
                    {
                        <tr>
                            <td>@rental.Id</td>
                            <td>
                                <strong>@rental.Car?.Brand @rental.Car?.Model</strong><br>
                                <small class="text-muted">@rental.Car?.LicensePlate</small>
                            </td>
                            <td>
                                <strong>@rental.Customer?.FirstName @rental.Customer?.LastName</strong><br>
                                <small class="text-muted">@rental.Customer?.Email</small>
                            </td>
                                                                        <td>@rental.PickupDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                            <td>@rental.DropoffDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                            <td>
                                <span class="badge @(rental.Status switch {
                                    "Pending" => "bg-warning",
                                    "Active" => "bg-success",
                                    "Completed" => "bg-info",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                })">
                                    @rental.Status
                                </span>
                            </td>
                            <td><strong>$@rental.TotalAmount.ToString("F2")</strong></td>
                                                                        <td>@rental.CreatedAt.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@rental.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-key text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No rentals found</h4>
            <p class="text-muted">Start by creating a new rental.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create First Rental
            </a>
        </div>
    }
</div>

<style>
    .table th {
        font-weight: 600;
    }
    
    .badge {
        font-size: 0.75rem;
    }
</style> 