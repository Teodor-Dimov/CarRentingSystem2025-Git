@model CarRentingSystem2025.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash"></i> Delete Rental</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this rental? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Rental ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Car:</dt>
                        <dd class="col-sm-8">@Model.Car?.DisplayName</dd>

                        <dt class="col-sm-4">Customer:</dt>
                        <dd class="col-sm-8">@Model.Customer?.DisplayName</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status switch {
                                "Active" => "bg-success",
                                "Completed" => "bg-info",
                                "Cancelled" => "bg-warning",
                                "Overdue" => "bg-danger",
                                _ => "bg-secondary"
                            })">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Pickup Date:</dt>
                        <dd class="col-sm-8">@Model.PickupDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</dd>

                        <dt class="col-sm-4">Dropoff Date:</dt>
                        <dd class="col-sm-8">@Model.DropoffDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</dd>

                        <dt class="col-sm-4">Total Amount:</dt>
                        <dd class="col-sm-8"><strong>â‚¬@Model.TotalAmount.ToString("F2")</strong></dd>

                        <dt class="col-sm-4">Pickup Location:</dt>
                        <dd class="col-sm-8">@Model.PickupLocation</dd>

                        <dt class="col-sm-4">Dropoff Location:</dt>
                        <dd class="col-sm-8">@Model.DropoffLocation</dd>

                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm", System.Globalization.CultureInfo.InvariantCulture)</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                    {
                        <div class="alert alert-info">
                            <h6>Special Requests:</h6>
                            <p class="mb-0">@Model.SpecialRequests</p>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Rental
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
