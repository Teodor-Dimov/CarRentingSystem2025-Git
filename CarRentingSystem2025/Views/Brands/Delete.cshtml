@model CarRentingSystem2025.Models.Brand

@{
    ViewData["Title"] = "Delete Brand";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash"></i> Delete Brand</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this brand?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Brand Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status switch {
                                "Active" => "bg-success",
                                "Inactive" => "bg-warning",
                                "Discontinued" => "bg-danger",
                                _ => "bg-secondary"
                            })">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Headquarters:</dt>
                        <dd class="col-sm-8">@Model.Headquarters</dd>

                        <dt class="col-sm-4">Founded Date:</dt>
                        <dd class="col-sm-8">@(Model.FoundedDate?.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture) ?? "N/A")</dd>

                        <dt class="col-sm-4">Website:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Website))
                            {
                                <a href="@Model.Website" target="_blank">@Model.Website</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">CEO:</dt>
                        <dd class="col-sm-8">@Model.CEO</dd>

                        <dt class="col-sm-4">Slogan:</dt>
                        <dd class="col-sm-8">@Model.Slogan</dd>

                        <dt class="col-sm-4">Featured:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Cars Count:</dt>
                        <dd class="col-sm-8">@Model.Cars?.Count</dd>
                    </dl>

                    @if (Model.Cars?.Any() == true)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> This brand has @Model.Cars.Count car(s) associated with it. 
                            <strong>Deleting this brand will permanently delete:</strong>
                            <ul class="mb-0 mt-2">
                                <li>This brand (@Model.Name)</li>
                                <li>All @Model.Cars.Count car(s) associated with this brand</li>
                                <li>All rental records for these cars</li>
                                <li>All customer rental history for these cars</li>
                            </ul>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Brand
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


