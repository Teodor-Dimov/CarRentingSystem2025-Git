@model IEnumerable<CarRentingSystem2025.Models.Brand>
@{
    ViewData["Title"] = "Car Brands";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-3">
                        <i class="fas fa-tag text-primary"></i> Car Brands
                    </h2>
                    <p class="text-muted">Discover our trusted automotive partners</p>
                </div>
                @if (User.IsInRole("Administrator"))
                {
                    <div>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add New Brand
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var brand in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-building"></i> @brand.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <i class="fas fa-car text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <p class="card-text text-muted">@brand.Description</p>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt"></i> @brand.Country
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-car"></i> @brand.TotalCars cars
                                </small>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-star"></i> @brand.AverageRating/5
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @brand.FoundedDate?.ToString("yyyy")
                                </small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(brand.Slogan))
                        {
                            <div class="alert alert-info mb-3">
                                <small><i class="fas fa-quote-left"></i> @brand.Slogan</small>
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @(brand.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @brand.Status
                            </span>
                            @if (brand.IsFeatured)
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-star"></i> Featured
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@brand.Id" class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            @if (User.IsInRole("Administrator"))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@brand.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to delete this brand? This will also delete all associated cars and rentals.');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-tag text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No brands available</h4>
            <p class="text-muted">Check back later for new brands.</p>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
    
    .alert {
        font-size: 0.875rem;
    }
</style>

