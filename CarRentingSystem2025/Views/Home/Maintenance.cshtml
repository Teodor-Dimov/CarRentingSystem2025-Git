@{
    ViewData["Title"] = "Under Maintenance";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <i class="fas fa-tools text-info" style="font-size: 6rem;"></i>
                <h1 class="display-1 text-muted">503</h1>
                <h2 class="mb-4">Under Maintenance</h2>
                <p class="lead text-muted mb-4">
                    We're currently performing maintenance to improve your experience. Please check back soon.
                </p>
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-clock"></i>
                    <strong>Estimated downtime:</strong> 30 minutes
                </div>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="javascript:location.reload()" class="btn btn-primary">
                        <i class="fas fa-redo"></i> Try Again
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home"></i> Go Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 2rem 0;
    }
</style>


