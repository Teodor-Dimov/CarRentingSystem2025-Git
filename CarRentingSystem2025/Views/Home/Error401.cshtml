@{
    ViewData["Title"] = "Unauthorized";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <i class="fas fa-user-lock text-warning" style="font-size: 6rem;"></i>
                <h1 class="display-1 text-muted">401</h1>
                <h2 class="mb-4">Unauthorized</h2>
                <p class="lead text-muted mb-4">
                    Please log in to access this resource.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 2rem 0;
    }
</style>

