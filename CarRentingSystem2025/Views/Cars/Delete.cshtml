@model CarRentingSystem2025.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash"></i> Delete Car</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this car? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Brand:</dt>
                        <dd class="col-sm-8">@Model.BrandEntity?.Name</dd>

                        <dt class="col-sm-4">Model:</dt>
                        <dd class="col-sm-8">@Model.Model</dd>

                        <dt class="col-sm-4">Year:</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">License Plate:</dt>
                        <dd class="col-sm-8"><code>@Model.LicensePlate</code></dd>

                        <dt class="col-sm-4">Color:</dt>
                        <dd class="col-sm-8">@Model.Color</dd>

                        <dt class="col-sm-4">Daily Rate:</dt>
                        <dd class="col-sm-8"><span class="text-success fw-bold">â‚¬@Model.DailyRate</span></dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                @(Model.IsAvailable ? "Available" : "Unavailable")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Mileage:</dt>
                        <dd class="col-sm-8">@Model.Mileage.ToString("N0") km</dd>

                        <dt class="col-sm-4">Fuel Type:</dt>
                        <dd class="col-sm-8">@Model.FuelType</dd>

                        <dt class="col-sm-4">Transmission:</dt>
                        <dd class="col-sm-8">@Model.Transmission</dd>

                        <dt class="col-sm-4">Body Type:</dt>
                        <dd class="col-sm-8">@Model.BodyType</dd>

                        <dt class="col-sm-4">Number of Rentals:</dt>
                        <dd class="col-sm-8">@Model.NumberOfRentals</dd>

                        <dt class="col-sm-4">Rating:</dt>
                        <dd class="col-sm-8">@Model.Rating stars</dd>
                    </dl>

                    @if (Model.NumberOfRentals > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Note:</strong> This car has been rented @Model.NumberOfRentals times. 
                            Deleting this car will also remove all associated rental records.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Car
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
