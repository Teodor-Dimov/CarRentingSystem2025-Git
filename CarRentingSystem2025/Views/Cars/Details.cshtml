@model CarRentingSystem2025.Models.Car
@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model} Details";
}

<div class="container py-4">
    <div class="row">
        <!-- Car Image -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-car text-primary" style="font-size: 8rem;"></i>
                    <h3 class="mt-3">@Model.Brand @Model.Model</h3>
                    <p class="text-muted">@Model.Year</p>
                </div>
            </div>
        </div>

        <!-- Car Details -->
        <div class="col-md-6">
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Basic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Brand:</strong> @Model.BrandEntity?.Name</p>
                            <p><strong>Model:</strong> @Model.Model</p>
                            <p><strong>Year:</strong> @Model.Year</p>
                            <p><strong>License Plate:</strong> @Model.LicensePlate</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Color:</strong> @Model.Color</p>
                            <p><strong>Daily Rate:</strong> $@Model.DailyRate</p>
                            <p><strong>Status:</strong> 
                                <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(Model.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </p>
                            <p><strong>Rating:</strong> 
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Model.Rating)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                    (@Model.Rating)
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Specifications -->
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Specifications</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                            <p><strong>Transmission:</strong> @Model.Transmission</p>
                            <p><strong>Seats:</strong> @Model.Seats</p>
                            <p><strong>Engine Size:</strong> @Model.EngineSize</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Body Type:</strong> @Model.BodyType</p>
                            <p><strong>Drive Type:</strong> @Model.DriveType</p>
                            <p><strong>Mileage:</strong> @Model.Mileage.ToString("N0") km</p>
                            <p><strong>Total Rentals:</strong> @Model.NumberOfRentals</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Service Information -->
            <div class="card border-0 shadow mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-tools"></i> Service Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Last Service:</strong> @Model.LastServiceDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Next Service:</strong> @Model.NextServiceDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Featured:</strong> 
                                <span class="badge @(Model.IsFeatured ? "bg-success" : "bg-secondary")">
                                    @(Model.IsFeatured ? "Yes" : "No")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features -->
            @if (!string.IsNullOrEmpty(Model.Features))
            {
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-star"></i> Features</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Features</p>
                    </div>
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card border-0 shadow mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-file-alt"></i> Description</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-grid gap-2">
                @if (Model.IsAvailable)
                {
                    <a asp-controller="Rentals" asp-action="Create" asp-route-carId="@Model.Id" class="btn btn-primary btn-lg">
                        <i class="fas fa-key"></i> Rent This Car
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-times"></i> Currently Unavailable
                    </button>
                }
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to All Cars
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>
