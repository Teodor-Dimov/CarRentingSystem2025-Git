@model IEnumerable<CarRentingSystem2025.Models.Car>
@{
    ViewData["Title"] = "All Cars";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-3">
                <i class="fas fa-car text-primary"></i> Available Cars
            </h2>
            <p class="text-center text-muted">Choose from our extensive fleet of vehicles</p>
        </div>
    </div>

    <!-- Search and Filter Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Search</label>
                            <input type="text" name="searchString" class="form-control" placeholder="Search cars..." value="@ViewBag.SearchString" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Brand</label>
                            <select name="brandFilter" class="form-select">
                                <option value="">All Brands</option>
                                @if (ViewBag.Brands != null)
                                {
                                    @foreach (var brand in ViewBag.Brands)
                                    {
                                        <option value="@brand" selected="@(ViewBag.BrandFilter == brand)">@brand</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Price Range</label>
                            <select name="priceFilter" class="form-select">
                                <option value="">All Prices</option>
                                <option value="low" selected="@(ViewBag.PriceFilter == "low")">Under €50</option>
                                <option value="medium" selected="@(ViewBag.PriceFilter == "medium")">€50 - €100</option>
                                <option value="high" selected="@(ViewBag.PriceFilter == "high")">Over €100</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Availability</label>
                            <select name="availabilityFilter" class="form-select">
                                <option value="">All</option>
                                <option value="available" selected="@(ViewBag.AvailabilityFilter == "available")">Available</option>
                                <option value="unavailable" selected="@(ViewBag.AvailabilityFilter == "unavailable")">Unavailable</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var car in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-car text-primary mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                        <p class="card-text text-muted mb-2">@car.BrandEntity?.Name</p>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-gas-pump"></i> @car.FuelType
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-cog"></i> @car.Transmission
                                </small>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-users"></i> @car.Seats seats
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="fas fa-palette"></i> @car.Color
                                </small>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge @(car.IsAvailable ? "bg-success" : "bg-danger")">
                                @(car.IsAvailable ? "Available" : "Unavailable")
                            </span>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= car.Rating)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                }
                                <small class="text-muted">(@car.Rating)</small>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                                                            <span class="h5 text-primary mb-0">€@car.DailyRate/day</span>
                            <small class="text-muted">@car.NumberOfRentals rentals</small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                            @if (car.IsAvailable)
                            {
                                <a asp-controller="Rentals" asp-action="Create" asp-route-carId="@car.Id" class="btn btn-outline-success">
                                    <i class="fas fa-key"></i> Rent Now
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-car text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No cars found</h4>
            <p class="text-muted">Try adjusting your search criteria.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-times"></i> Clear Filters
            </a>
        </div>
    }

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Car pagination">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" 
                                   asp-route-searchString="@ViewBag.SearchString" 
                                   asp-route-brandFilter="@ViewBag.BrandFilter" 
                                   asp-route-priceFilter="@ViewBag.PriceFilter" 
                                   asp-route-availabilityFilter="@ViewBag.AvailabilityFilter">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" 
                                   asp-route-searchString="@ViewBag.SearchString" 
                                   asp-route-brandFilter="@ViewBag.BrandFilter" 
                                   asp-route-priceFilter="@ViewBag.PriceFilter" 
                                   asp-route-availabilityFilter="@ViewBag.AvailabilityFilter">
                                    @i
                                </a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" 
                                   asp-route-searchString="@ViewBag.SearchString" 
                                   asp-route-brandFilter="@ViewBag.BrandFilter" 
                                   asp-route-priceFilter="@ViewBag.PriceFilter" 
                                   asp-route-availabilityFilter="@ViewBag.AvailabilityFilter">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <div class="text-center text-muted">
                    Showing @(((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1) to @Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCars) of @ViewBag.TotalCars cars
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
</style>