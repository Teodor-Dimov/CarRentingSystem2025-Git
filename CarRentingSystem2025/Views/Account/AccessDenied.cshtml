@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Access Denied
                    </h3>
                </div>
                <div class="card-body text-center p-4">
                    <i class="fas fa-lock text-danger" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">You don't have permission to access this resource.</h4>
                    <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


