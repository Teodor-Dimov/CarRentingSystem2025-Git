@using CarRentingSystem2025.Models
@model IEnumerable<Rental>
@{
    var customer = ViewBag.Customer as Customer;
    ViewData["Title"] = "My Profile";
}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>My Profile</h2>
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@customer?.FirstName @customer?.LastName</dd>
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@customer?.Email</dd>
                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@customer?.PhoneNumber</dd>
                <dt class="col-sm-3">Membership:</dt>
                <dd class="col-sm-9">@customer?.MembershipLevel</dd>
            </dl>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col">
            <h4>My Rentals</h4>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Car</th>
                    <th>Pickup</th>
                    <th>Dropoff</th>
                    <th>Status</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rental in Model)
                {
                    <tr>
                        <td>
                            <strong>@rental.Car.Brand @rental.Car.Model</strong><br>
                            <small class="text-muted">@rental.Car.LicensePlate</small>
                        </td>
                        <td>@rental.PickupDate.ToString("MMM dd, yyyy")</td>
                        <td>@rental.DropoffDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <span class="badge @(rental.Status switch {
                                "Pending" => "bg-warning",
                                "Active" => "bg-success",
                                "Completed" => "bg-info",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            })">
                                @rental.Status
                            </span>
                        </td>
                        <td>$@rental.TotalAmount.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h5 class="text-muted">You have not rented any cars yet.</h5>
        </div>
    }
</div>
