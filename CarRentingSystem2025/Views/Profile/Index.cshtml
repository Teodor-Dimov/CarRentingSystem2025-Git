@model CarRentingSystem2025.Models.Customer
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Profile Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user"></i> Profile Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-user-circle text-primary" style="font-size: 4rem;"></i>
                        <h4 class="mt-2">@Model.FirstName @Model.LastName</h4>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Phone</small>
                            <p class="mb-2">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not provided" : Model.PhoneNumber)</p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Member Since</small>
                            <p class="mb-2">@Model.MembershipStartDate.ToString("MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Membership Level</small>
                            <p class="mb-2">
                                <span class="badge bg-primary">@(string.IsNullOrEmpty(Model.MembershipLevel) ? "Standard" : Model.MembershipLevel)</span>
                            </p>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Status</small>
                            <p class="mb-2">
                                @if (Model.IsVerified)
                                {
                                    <span class="badge bg-success">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="MyCars" class="btn btn-info">
                            <i class="fas fa-car"></i> My Cars
                        </a>
                        <a asp-action="Edit" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-lg-8 mb-4">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="card bg-primary text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-key fa-2x mb-2"></i>
                            <h4>@(ViewBag.TotalRentals ?? 0)</h4>
                            <small>Total Rentals</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-success text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h4>@(ViewBag.CompletedRentals ?? 0)</h4>
                            <small>Completed</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-warning text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h4>@(ViewBag.ActiveRentals ?? 0)</h4>
                            <small>Active</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-info text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-euro-sign fa-2x mb-2"></i>
                            <h4>€@((ViewBag.TotalSpent ?? 0).ToString("F0"))</h4>
                            <small>Total Spent</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rental History -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i> Rental History
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Rentals.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Car</th>
                                        <th>Pickup Date</th>
                                        <th>Dropoff Date</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rental in Model.Rentals.OrderByDescending(r => r.PickupDate))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@rental.Car?.Brand @rental.Car?.Model</strong><br>
                                                <small class="text-muted">@rental.Car?.BrandEntity?.Name</small>
                                            </td>
                                            <td>@rental.PickupDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                            <td>@rental.DropoffDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                            <td>
                                                <span class="badge @(rental.Status switch {
                                                    "Pending" => "bg-warning",
                                                    "Active" => "bg-success",
                                                    "Completed" => "bg-info",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                })">
                                                    @rental.Status
                                                </span>
                                            </td>
                                            <td><strong>€@rental.TotalAmount.ToString("F2")</strong></td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-car text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">No rentals yet</h5>
                            <p class="text-muted">Start by browsing our available cars!</p>
                            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-car"></i> Browse Cars
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
