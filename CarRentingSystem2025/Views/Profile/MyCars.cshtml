@model IEnumerable<CarRentingSystem2025.Models.Car>
@{
    ViewData["Title"] = "My Cars";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-car"></i> My Rented Cars
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-car fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No cars rented yet</h5>
                            <p class="text-muted">You haven't rented any cars yet. Start by browsing our available cars!</p>
                            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-search"></i> Browse Cars
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var car in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0">@car.Brand @car.Model</h6>
                                                <span class="badge bg-@(car.IsAvailable ? "success" : "warning")">
                                                    @(car.IsAvailable ? "Available" : "Rented")
                                                </span>
                                            </div>
                                            
                                            <p class="text-muted small mb-2">
                                                <i class="fas fa-tag"></i> @car.BrandEntity?.Name
                                            </p>
                                            
                                            <div class="row text-center mb-3">
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Year</small>
                                                    <strong>@car.Year</strong>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Mileage</small>
                                                    <strong>@car.Mileage.ToString("N0") km</strong>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Rate</small>
                                                    <strong>â‚¬@car.DailyRate/day</strong>
                                                </div>
                                            </div>
                                            
                                            <div class="row text-center mb-3">
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Engine</small>
                                                    <strong>@car.EngineSize L</strong>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Body</small>
                                                    <strong>@car.BodyType</strong>
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted d-block">Drive</small>
                                                    <strong>@car.DriveType</strong>
                                                </div>
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(car.Features))
                                            {
                                                <div class="mb-3">
                                                    <small class="text-muted d-block mb-1">Features:</small>
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var feature in car.Features.Split(',').Take(3))
                                                        {
                                                            <span class="badge bg-light text-dark">@feature.Trim()</span>
                                                        }
                                                        @if (car.Features.Split(',').Length > 3)
                                                        {
                                                            <span class="badge bg-light text-dark">+@(car.Features.Split(',').Length - 3) more</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                            
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <div class="text-warning me-1">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= car.Rating)
                                                            {
                                                                <i class="fas fa-star"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-star"></i>
                                                            }
                                                        }
                                                    </div>
                                                    <small class="text-muted">(@car.NumberOfRentals rentals)</small>
                                                </div>
                                                <a asp-action="CarDetails" asp-route-id="@car.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


