@model IEnumerable<CarRentingSystem2025.Models.Rental>
@{
    ViewData["Title"] = "Manage Rentals";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-car"></i> Manage Rentals</h2>
        <a href="/Rentals/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Rental
        </a>
    </div>



    <!-- Rentals Table -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No rentals found</h5>
                    <p class="text-muted">No rentals match your search criteria.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Car</th>
                                <th>Customer</th>
                                <th>Pickup Date</th>
                                <th>Dropoff Date</th>
                                <th>Status</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rental in Model)
                            {
                                <tr>
                                    <td>@rental.Id</td>
                                    <td>
                                        <strong>@rental.Car?.BrandEntity?.Name @rental.Car?.Model</strong><br>
                                        <small class="text-muted">@rental.Car?.LicensePlate</small>
                                    </td>
                                    <td>
                                        <strong>@rental.Customer?.FirstName @rental.Customer?.LastName</strong><br>
                                        <small class="text-muted">@rental.Customer?.Email</small>
                                    </td>
                                    <td>@rental.PickupDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td>@rental.DropoffDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                    <td>
                                        <span class="badge @(rental.Status switch {
                                            "Active" => "bg-success",
                                            "Completed" => "bg-info",
                                            "Cancelled" => "bg-warning",
                                            "Overdue" => "bg-danger",
                                            _ => "bg-secondary"
                                        })">@rental.Status</span>
                                    </td>
                                    <td>â‚¬@rental.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@rental.Id" 
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@rental.Id" 
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@rental.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this rental? This action cannot be undone.');"
                                                        title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                                 </div>
             }
        </div>
    </div>
</div>
