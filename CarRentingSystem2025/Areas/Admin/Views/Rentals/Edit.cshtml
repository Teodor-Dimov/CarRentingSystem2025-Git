@model CarRentingSystem2025.Models.Rental
@{
    ViewData["Title"] = "Edit Rental";
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-edit"></i> Edit Rental</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Rentals" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CarId" class="control-label">Car</label>
                                    <select name="CarId" class="form-select">
                                        <option value="">Select a car</option>
                                        @foreach (var car in ViewBag.Cars)
                                        {
                                            if (car.Id == Model.CarId)
                                            {
                                                <option value="@car.Id" selected>@car.DisplayName</option>
                                            }
                                            else
                                            {
                                                <option value="@car.Id">@car.DisplayName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CarId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CustomerId" class="control-label">Customer</label>
                                    <select name="CustomerId" class="form-select">
                                        <option value="">Select a customer</option>
                                        @foreach (var customer in ViewBag.Customers)
                                        {
                                            if (customer.Id == Model.CustomerId)
                                            {
                                                <option value="@customer.Id" selected>@customer.DisplayName</option>
                                            }
                                            else
                                            {
                                                <option value="@customer.Id">@customer.DisplayName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PickupDate" class="control-label">Pickup Date</label>
                                    <input name="PickupDate" class="form-control" type="date" value="@Model.PickupDate.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="PickupDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DropoffDate" class="control-label">Dropoff Date</label>
                                    <input name="DropoffDate" class="form-control" type="date" value="@Model.DropoffDate.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="DropoffDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PickupLocation" class="form-label">Pickup Location</label>
                                <input name="PickupLocation" class="form-control" value="@Model.PickupLocation" />
                                <span asp-validation-for="PickupLocation" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DropoffLocation" class="form-label">Dropoff Location</label>
                                <input name="DropoffLocation" class="form-control" value="@Model.DropoffLocation" />
                                <span asp-validation-for="DropoffLocation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select name="Status" class="form-select">
                                    @foreach (var status in ViewBag.StatusOptions)
                                    {
                                        if (Model.Status == status)
                                        {
                                            <option value="@status" selected>@status</option>
                                        }
                                        else
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalAmount" class="form-label">Total Amount</label>
                                <input name="TotalAmount" class="form-control" type="number" step="0.01" value="@Model.TotalAmount" />
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActualPickupTime" class="form-label">Actual Pickup Time</label>
                                <input name="ActualPickupTime" class="form-control" type="datetime-local" 
                                       value="@(Model.ActualPickupTime?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                                <span asp-validation-for="ActualPickupTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActualDropoffTime" class="form-label">Actual Dropoff Time</label>
                                <input name="ActualDropoffTime" class="form-control" type="datetime-local" 
                                       value="@(Model.ActualDropoffTime?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                                <span asp-validation-for="ActualDropoffTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepositAmount" class="form-label">Deposit Amount</label>
                                <input name="DepositAmount" class="form-control" type="number" step="0.01" value="@Model.DepositAmount" />
                                <span asp-validation-for="DepositAmount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="InsuranceType" class="form-label">Insurance Type</label>
                                <select name="InsuranceType" class="form-select">
                                    <option value="">Select Insurance Type</option>
                                    <option value="Basic" @(Model.InsuranceType == "Basic" ? "selected" : "")>Basic</option>
                                    <option value="Standard" @(Model.InsuranceType == "Standard" ? "selected" : "")>Standard</option>
                                    <option value="Premium" @(Model.InsuranceType == "Premium" ? "selected" : "")>Premium</option>
                                    <option value="None" @(Model.InsuranceType == "None" ? "selected" : "")>None</option>
                                </select>
                                <span asp-validation-for="InsuranceType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InsuranceCost" class="form-label">Insurance Cost</label>
                                <input name="InsuranceCost" class="form-control" type="number" step="0.01" value="@Model.InsuranceCost" />
                                <span asp-validation-for="InsuranceCost" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LateFees" class="form-label">Late Fees</label>
                                <input name="LateFees" class="form-control" type="number" step="0.01" value="@Model.LateFees" />
                                <span asp-validation-for="LateFees" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DamageFees" class="form-label">Damage Fees</label>
                                <input name="DamageFees" class="form-control" type="number" step="0.01" value="@Model.DamageFees" />
                                <span asp-validation-for="DamageFees" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerRating" class="form-label">Customer Rating</label>
                                <select name="CustomerRating" class="form-select">
                                    <option value="">No Rating</option>
                                    <option value="1" @(Model.CustomerRating == 1 ? "selected" : "")>1 Star</option>
                                    <option value="2" @(Model.CustomerRating == 2 ? "selected" : "")>2 Stars</option>
                                    <option value="3" @(Model.CustomerRating == 3 ? "selected" : "")>3 Stars</option>
                                    <option value="4" @(Model.CustomerRating == 4 ? "selected" : "")>4 Stars</option>
                                    <option value="5" @(Model.CustomerRating == 5 ? "selected" : "")>5 Stars</option>
                                </select>
                                <span asp-validation-for="CustomerRating" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DamageDescription" class="form-label">Damage Description</label>
                            <textarea name="DamageDescription" class="form-control" rows="3">@Model.DamageDescription</textarea>
                            <span asp-validation-for="DamageDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SpecialRequests" class="form-label">Special Requests</label>
                            <textarea name="SpecialRequests" class="form-control" rows="3">@Model.SpecialRequests</textarea>
                            <span asp-validation-for="SpecialRequests" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerReview" class="form-label">Customer Review</label>
                            <textarea name="CustomerReview" class="form-control" rows="3">@Model.CustomerReview</textarea>
                            <span asp-validation-for="CustomerReview" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


