@model CarRentingSystem2025.Models.Car
@{
    ViewData["Title"] = "Delete Car";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-trash"></i> Delete Car</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Cars
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-warning"></i> Warning</h6>
                        <p class="mb-0">Are you sure you want to delete this car? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Car Information</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Brand:</strong></td>
                                    <td>@Model.BrandEntity?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Model:</strong></td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td><strong>Year:</strong></td>
                                    <td>@Model.Year</td>
                                </tr>
                                <tr>
                                    <td><strong>License Plate:</strong></td>
                                    <td><code>@Model.LicensePlate</code></td>
                                </tr>
                                <tr>
                                    <td><strong>Color:</strong></td>
                                    <td>@Model.Color</td>
                                </tr>
                                <tr>
                                    <td><strong>Daily Rate:</strong></td>
                                    <td><span class="text-success fw-bold">€@Model.DailyRate</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Technical Details</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Engine Size:</strong></td>
                                    <td>@Model.EngineSize</td>
                                </tr>
                                <tr>
                                    <td><strong>Body Type:</strong></td>
                                    <td>@Model.BodyType</td>
                                </tr>
                                <tr>
                                    <td><strong>Drive Type:</strong></td>
                                    <td>@Model.DriveType</td>
                                </tr>
                                <tr>
                                    <td><strong>Mileage:</strong></td>
                                    <td>@Model.Mileage.ToString("N0") km</td>
                                </tr>
                                <tr>
                                    <td><strong>Fuel Type:</strong></td>
                                    <td>@Model.FuelType</td>
                                </tr>
                                <tr>
                                    <td><strong>Transmission:</strong></td>
                                    <td>@Model.Transmission</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (Model.Rentals.Any())
                    {
                        <div class="alert alert-info mt-3">
                            <h6><i class="fas fa-info-circle"></i> Rental History</h6>
                            <p class="mb-2">This car has been rented @Model.NumberOfRentals times with an average rating of @Model.Rating stars.</p>
                            <small class="text-muted">Deleting this car will also remove all associated rental records.</small>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i> Car Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@Model.NumberOfRentals</h4>
                            <small class="text-muted">Total Rentals</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-warning">@Model.Rating</h4>
                            <small class="text-muted">Rating</small>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center">
                        <div class="col-6">
                            <h6 class="text-success">€@Model.DailyRate.ToString("F2")</h6>
                            <small class="text-muted">Daily Rate</small>
                        </div>
                        <div class="col-6">
                            <h6 class="text-info">@Model.Mileage.ToString("N0") km</h6>
                            <small class="text-muted">Mileage</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Impact Analysis
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-times text-danger"></i> Car will be permanently removed
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times text-danger"></i> All rental history will be lost
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times text-danger"></i> Customer reviews will be deleted
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i> Available for new car registration
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


