@model IEnumerable<CarRentingSystem2025.Models.Car>
@{
    ViewData["Title"] = "Manage Cars";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-car"></i> Manage Cars</h2>
        <a href="/Admin/Cars/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Car
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> All Cars (@Model.Count())
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Car</th>
                            <th>Brand</th>
                            <th>License Plate</th>
                            <th>Daily Rate</th>
                            <th>Status</th>
                            <th>Current Renter</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            var activeRental = car.Rentals.FirstOrDefault(r => r.Status == "Active");
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="fas fa-car fa-2x text-primary"></i>
                                        </div>
                                        <div>
                                            <strong>@car.Brand @car.Model</strong><br>
                                            <small class="text-muted">@car.Year â€¢ @car.Color</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@car.BrandEntity?.Name</span>
                                </td>
                                <td>
                                    <code>@car.LicensePlate</code>
                                </td>
                                <td>
                                    <strong class="text-success">$@car.DailyRate</strong>
                                </td>
                                <td>
                                    @if (car.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Rented</span>
                                    }
                                </td>
                                <td>
                                    @if (activeRental != null)
                                    {
                                        <div>
                                            <strong>@activeRental.Customer?.FirstName @activeRental.Customer?.LastName</strong><br>
                                            <small class="text-muted">@activeRental.Customer?.Email</small><br>
                                            <small class="text-info">Until @activeRental.DropoffDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Rented</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Admin/Cars/Edit/@car.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/Admin/Cars/Delete/@car.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

