@model IEnumerable<CarRentingSystem2025.Models.Car>
@{
    ViewData["Title"] = "Manage Cars";
    Layout = "_AdminLayout";
}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Admin Cars Index page loaded');
        console.log('Number of cars: @Model.Count()');
        
        // Add click handlers to Edit buttons for debugging
        document.querySelectorAll('a[href*="/Admin/Cars/Edit/"]').forEach(function(button) {
            button.addEventListener('click', function(e) {
                console.log('Edit button clicked:', this.href);
                console.log('Car ID:', this.getAttribute('asp-route-id'));
                console.log('Target URL should be:', this.href);
            });
        });
    });
</script>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-car"></i> Manage Cars</h2>
        <a href="/Admin/Cars/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Car
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> All Cars (@Model.Count())
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Car</th>
                            <th>Brand</th>
                            <th>License Plate</th>
                            <th>Daily Rate</th>
                            <th>Status</th>
                            <th>Current Renter</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            var activeRental = car.Rentals.FirstOrDefault(r => r.Status == "Active");
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="fas fa-car fa-2x text-primary"></i>
                                        </div>
                                        <div>
                                            <strong>@car.Brand @car.Model</strong><br>
                                            <small class="text-muted">@car.Year • @car.Color</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@car.BrandEntity?.Name</span>
                                </td>
                                <td>
                                    <code>@car.LicensePlate</code>
                                </td>
                                <td>
                                    <strong class="text-success">€@car.DailyRate</strong>
                                </td>
                                <td>
                                    @if (car.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Rented</span>
                                    }
                                </td>
                                <td>
                                    @if (activeRental != null)
                                    {
                                        <div>
                                            <strong>@activeRental.Customer?.FirstName @activeRental.Customer?.LastName</strong><br>
                                            <small class="text-muted">@activeRental.Customer?.Email</small><br>
                                            <small class="text-info">Until @activeRental.DropoffDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Rented</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="/Admin/Cars/Edit/@car.Id" 
                                           class="btn btn-sm btn-outline-warning" title="Edit Car"
                                           style="pointer-events: auto; cursor: pointer; text-decoration: none;"
                                           onclick="console.log('Edit button clicked for car ID: @car.Id'); console.log('Navigating to /Admin/Cars/Edit/@car.Id');">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/Cars/Details/@car.Id" 
                                           class="btn btn-sm btn-outline-primary" title="View Details"
                                           style="pointer-events: auto; cursor: pointer; text-decoration: none;"
                                           onclick="console.log('Details button clicked for car ID: @car.Id');">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form action="/Admin/Cars/Delete/@car.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Car"
                                                    onclick="console.log('Delete button clicked for car ID: @car.Id'); return confirm('Are you sure you want to delete this car? This action cannot be undone.');"
                                                    style="pointer-events: auto; cursor: pointer;">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

